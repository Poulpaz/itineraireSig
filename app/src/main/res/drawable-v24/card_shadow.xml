<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="#1e000000"/>
            <padding android:top="0.5dp" android:right="1dp" android:bottom="0dp" android:left="1dp" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/>
            <corners android:radius="2dp" />
            <padding android:top="0dp" android:right="0dp" android:bottom="2dp" android:left="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>